            script(type='text/javascript').
                $(function(){
                    $(".side_box").hide()
                    window.onscroll=function(){
                        var autoheight=document.body.scrollTop||document.documentElement.scrollTop;
                        if(autoheight>186){
                            $(".side_box").fadeIn(500)
                            $(".top_nav").css({"position":"fixed","z-index":999,"width":"100%","top":36})
                            $(".top_nav").css("box-shadow","0 2px 4px rgba(0,0,0,.5)")
                        }else{
                            $(".side_box").fadeOut(500)
                            $(".top_nav").css({"position":"relative","z-index":99,"width":"100%","top":0})
                            $(".top_nav").css("box-shadow","0 0 0 rgba(0,0,0,.5)")
                        }
                    }
                    $(".sidetop").click(
                        function(){
                            $('body,html').animate({"scrollTop":0},500);
                        }
                    )
                })